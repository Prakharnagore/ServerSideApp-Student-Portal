<!DOCTYPE html>
<html lang="en">
  <head>
    <!--------------------------T H I S  I S  B O O T S T R A P  C D N-L I N K ---------------------->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=result.studentname%> Result</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Fuggles&family=Montserrat:ital,wght@0,200;0,300;0,500;1,100;1,200;1,300;1,400&family=Rampart+One&display=swap");
      body {
        padding: 50px 300px;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
      }
      .marksheet {
        padding: 40px;
        border: 2px solid #000;
      }
      .edit {
        display: flex;
        align-items: center;
      }
      .picture {
        padding: 30px;
      }
      .row {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 32px;
        font-weight: 700;
        text-align: center;
      }
      .studentinfo {
        display: flex;
        flex-wrap: wrap;
        margin-top: 20px;
      }
      .info {
        margin: 4px;
        padding: 5px;
      }
      .marks {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="marksheet">
      <div class="row">
        <div class="title">
          <%=result.studentschool%> Marksheet
          <hr />
        </div>
      </div>
      <div class="edit">
        <div class="studentinfo">
          <div class="info">
            <span><b>Student Name</b></span>
            <span>:</span>
            <span><%=result.studentname%></span>
          </div>
          <div class="info">
            <span><b>Student Father Name</b></span>
            <span>:</span>
            <span><%=result.studentfathername%></span>
          </div>
          <div class="info">
            <span><b>Enrollment Number</b></span>
            <span>:</span>
            <span><%=result.studentrollno%></span>
          </div>
          <div class="info">
            <span><b>Gender</b></span>
            <span>:</span>
            <span><%=result.studentgender%></span>
          </div>
          <div class="info">
            <span><b>Date of Birth</b></span>
            <span>:</span>
            <span><%=result.studentdob%></span>
          </div>
          <div class="info">
            <span><b>State</b></span>
            <span>:</span>
            <span><%=result.newstudentstate%></span>
          </div>
          <div class="info">
            <span><b>City</b></span>
            <span>:</span>
            <span><%=result.studentcity%></span>
          </div>
          <div class="info">
            <span><b>Address</b></span>
            <span>:</span>
            <span><%=result.studentaddress%></span>
          </div>
          <div class="info">
            <span><b>School</b></span>
            <span>:</span>
            <span><%=result.studentschool%></span>
          </div>
        </div>
        <div class="picture">
          <img
            src="/images/<%=result.studentpicture%>"
            alt=""
            width="100"
            height="100"
          />
          <p
            style="
              font-family: 'Fuggles', cursive;
              font-size: 25px;
              font-weight: 700;
              white-space: nowrap;
              transform: rotate(350deg);
              position: relative;
              top: -10px;
            "
          >
            <%=result.studentname%>
          </p>
        </div>
      </div>
      <div class="marks">
        <table class="table table-bordered">
          <caption style="text-transform: uppercase">
            Status :
            <span
              style="
                font-weight: 700;
                padding: 5px;
                color: #000;
                background-color: greenyellow;
              "
              ><%=result.status%>%</span
            >
            <p>
              Scored :
              <span style="font-weight: 700; color: #000"
                ><%=result.percentage%>%</span
              >
            </p>
          </caption>

          <thead>
            <tr>
              <th scope="col">Serial No</th>
              <th scope="col">Subject Code</th>
              <th scope="col">Subject Name</th>
              <th scope="col">Subject Marks</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td><%=result.ecode%></td>
              <td>English</td>
              <td><%=result.emarks%></td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td><%=result.hcode%></td>
              <td>Hindi</td>
              <td><%=result.hmarks%></td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td><%=result.mcode%></td>
              <td>Mathematics</td>
              <td><%=result.mmarks%></td>
            </tr>
            <tr>
              <th scope="row">4</th>
              <td><%=result.pcode%></td>
              <td>Physics</td>
              <td><%=result.pmarks%></td>
            </tr>
            <tr>
              <th scope="row">5</th>
              <td><%=result.ccode%></td>
              <td>Chemistry</td>
              <td><%=result.cmarks%></td>
            </tr>
            <tr>
              <th colspan="3">Total Marks</th>
              <td><%=result.totalmarks%></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <a href="/">
      <button class="btn btn-primary" style="margin: 10px">
        Back to home page
      </button></a
    >
  </body>
</html>

